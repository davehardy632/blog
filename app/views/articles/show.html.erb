<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<h3>Comments</h3>
<%= render partial: 'articles/comment', collection: @article.comments.reverse %>
<%= render partial: 'comments/form' %>
<p><%= link_to "Back to Articles list", articles_path, class: 'article-index-link' %></p>
<p><%= link_to "Delete", article_path(@article), method: :delete %></p>
<p><%= link_to "Edit Article", edit_article_path(@article) %></p>
