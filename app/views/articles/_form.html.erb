<%= form_for @article do |f| %>
<ul>
 <% @article.errors.full_messages.each do |error| %>
   <li><%= error %></li>
 <% end %>
 </ul>
 <ul>
   <li><%= f.label :title %></li><br />
   <li><%= f.text_field :title %></li>
 </ul>
 <ul>
   <li><%= f.label :body %></li><br />
   <li><%= f.text_area :body %></li>
 </ul>
 <ul>
   <li><%= f.label :tag_list %></li><br />
   <li><%= f.text_area :tag_list %></li>
 </ul>
<ul>
  <li><%= f.submit %></li>
</ul>
<% end %>
