<h1>Edit Article</h1>
<%= form_for @article do |f| %>
<ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<ul>
  <li><%= f.label :title %></li>
  <li><%= f.text_field :title, placeholder: @article.title %></li>
</ul>
<ul>
  <li><%= f.label :body %></li>
  <li><%= f.text_area :body, placeholder: @article.body %></li>
</ul>
<ul>
  <li><%= f.submit %></li>
</ul>
<% end %>
