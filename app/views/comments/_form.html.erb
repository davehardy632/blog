<h1>Post a Comment</h1>

<%= form_for [@article, @comment] do |f| %>
<ul>
  <li><%= f.label :author_name, "Your Name" %></li><br/>
  <li><%= f.text_field :author_name %></li>
</ul>
<ul>
  <li><%= f.label :body, "Your Comment" %></li><br/>
  <li><%= f.text_area :body %></li>
</ul>
<ul>
  <li><%= f.submit 'Submit'%></li>
</ul>
<% end %>
